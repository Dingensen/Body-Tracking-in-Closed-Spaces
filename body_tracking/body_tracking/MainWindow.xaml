<Window x:Class="body_tracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:body_tracking"
        mc:Ignorable="d"
        Title="MainWindow" Height="492" Width="800">
    <Grid Margin="10,0,10,45">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="Serial" Grid.Row="0" Margin="0 0 -1 0" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontFamily="Consolas" FontSize="18" Text="Tutorial 05: Skeleton View"/>
        <Viewbox Grid.Row="1" HorizontalAlignment="Center">
            <Image x:Name="FrameDisplayImage" Stretch="UniformToFill" />
        </Viewbox>
        <Button Content="Infrared" HorizontalAlignment="Center"  Width="100" Height="28" Margin="120,10,552,-38" Grid.Row="3" VerticalAlignment="Top" Click="Button_Infrared"/>
        <Button Content="Color" HorizontalAlignment="Center"  Width="100" Height="28" Margin="240,10,432,-38" Grid.Row="3" VerticalAlignment="Top" Click="Button_Color"/>
        <Button Content="Depth" HorizontalAlignment="Center"  Width="100" Height="28" Margin="360,10,312,-38" Grid.Row="3" VerticalAlignment="Top" Click="Button_Depth"/>
        <Button Content="Skeleton View" HorizontalAlignment="Center"  Width="100" Height="28" Margin="489,10,183,-38" Grid.Row="3" VerticalAlignment="Top" Click="Button_Body"/>
    </Grid>
</Window>
